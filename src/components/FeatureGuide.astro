---
import { t, tObject, getLocalizedPath } from '../i18n/utils';
import type { Locale } from '../i18n/utils';

interface Step {
  title: string;
  content: string;
  tip: string;
}

interface Guide {
  title: string;
  description: string;
  steps: Step[];
}

interface Props {
  locale: Locale;
  feature: string;
}

const { locale, feature } = Astro.props;
const guide = tObject<Guide>(locale, `logistics.guides.${feature}`);
const backLabel = t(locale, 'logistics.guides.back');
const tipLabel = t(locale, 'logistics.guides.tip');
const ctaLabel = t(locale, 'logistics.guides.openBot');
---

<section class="py-16 md:py-24">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <a href={`${getLocalizedPath('/logistics', locale)}#bot-features`} class="inline-flex items-center gap-2 text-primary hover:underline mb-8">
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      {backLabel}
    </a>

    <h1 class="text-3xl md:text-4xl font-bold text-text mb-4">{guide.title}</h1>
    <p class="text-lg text-text-light mb-12">{guide.description}</p>

    <div class="space-y-8">
      {guide.steps.map((step, i) => (
        <div class="relative pl-12">
          <div class="absolute left-0 top-0 w-8 h-8 bg-primary/10 rounded-lg flex items-center justify-center text-primary font-bold text-sm">
            {i + 1}
          </div>
          <h2 class="text-xl font-semibold text-text mb-2">{step.title}</h2>
          <p class="text-text-light leading-relaxed">{step.content}</p>
          {step.tip && (
            <div class="mt-3 flex items-start gap-3 bg-accent/5 border border-accent/20 rounded-xl px-4 py-3">
              <span class="text-accent font-semibold text-sm whitespace-nowrap">ðŸ’¡ {tipLabel}:</span>
              <span class="text-text-light text-sm">{step.tip}</span>
            </div>
          )}
        </div>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a href="https://t.me/lakoprevoz_bot" target="_blank" rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-8 py-4 bg-[#229ED9] hover:bg-[#1a8abf] text-white font-semibold rounded-xl transition-colors">
        <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.479.33-.913.492-1.302.48-.428-.012-1.252-.242-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
        {ctaLabel}
      </a>
    </div>
  </div>
</section>
