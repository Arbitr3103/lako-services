---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTA from '../../components/CTA.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import { t, getLocalizedPath } from '../../i18n/utils';

const locale = 'ru';
---
<BaseLayout
  title={t(locale, 'seo.about.title')}
  description={t(locale, 'seo.about.description')}
  locale={locale}
>
  {/* Mission */}
  <section class="relative overflow-hidden bg-gradient-to-br from-primary/5 via-bg to-accent/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-text">
          {t(locale, 'about.title')}
        </h1>
        <p class="mt-6 text-lg md:text-xl text-text-light leading-relaxed">
          {t(locale, 'about.mission')}
        </p>
      </div>
    </div>
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent/10 rounded-full blur-3xl"></div>
    </div>
  </section>

  {/* Contact Info */}
  <section class="py-20 bg-bg-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading>Контактная информация</SectionHeading>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="bg-bg-card rounded-2xl p-6 border border-border text-center">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          </div>
          <p class="text-sm text-text-light mb-1">Офис</p>
          <p class="font-semibold text-text">{t(locale, 'about.contact.office')}</p>
        </div>

        <div class="bg-bg-card rounded-2xl p-6 border border-border text-center">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
          </div>
          <p class="text-sm text-text-light mb-1">Email</p>
          <a href={`mailto:${t(locale, 'about.contact.email')}`} class="font-semibold text-primary hover:underline">
            {t(locale, 'about.contact.email')}
          </a>
        </div>

        <div class="bg-bg-card rounded-2xl p-6 border border-border text-center">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg>
          </div>
          <p class="text-sm text-text-light mb-1">Telegram</p>
          <p class="font-semibold text-text">{t(locale, 'about.contact.telegram')}</p>
        </div>

        <a href="https://wa.me/381638941789" target="_blank" rel="noopener noreferrer" class="bg-bg-card rounded-2xl p-6 border border-border text-center hover:border-green-500/50 transition-colors">
          <div class="w-12 h-12 bg-green-500/10 rounded-xl flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-green-500" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          </div>
          <p class="text-sm text-text-light mb-1">WhatsApp</p>
          <p class="font-semibold text-text">{t(locale, 'contact.channels.whatsapp')}</p>
        </a>
      </div>
    </div>
  </section>

  {/* Why Us */}
  <section class="py-20 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <SectionHeading>{t(locale, 'about.whyUs.title')}</SectionHeading>
        <p class="text-lg text-text-light leading-relaxed">
          {t(locale, 'about.whyUs.text')}
        </p>
      </div>
    </div>
  </section>

  {/* Bottom CTA */}
  <section class="py-16 bg-gradient-to-r from-primary/20 to-accent/10 border-t border-border">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Есть вопрос?</h2>
      <p class="text-text-light mb-8 text-lg">Свяжитесь с нами, и мы ответим в кратчайшие сроки.</p>
      <CTA href={getLocalizedPath('/contact', locale)} variant="accent" size="lg">
        {t(locale, 'nav.contact')}
      </CTA>
    </div>
  </section>
</BaseLayout>
