---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import ContactForm from '../../components/react/ContactForm';
import { t } from '../../i18n/utils';

const locale = 'ru';
---
<BaseLayout
  title={t(locale, 'seo.contact.title')}
  description={t(locale, 'seo.contact.description')}
  locale={locale}
>
  {/* Title */}
  <section class="bg-gradient-to-br from-primary/5 via-bg to-accent/5 py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-text">
        {t(locale, 'contact.title')}
      </h1>
      <p class="mt-4 text-lg md:text-xl text-text-light max-w-2xl mx-auto">
        {t(locale, 'contact.subtitle')}
      </p>
    </div>
  </section>

  {/* Two columns: Form + Contact Channels */}
  <section class="py-16 md:py-20 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">
        {/* Left: Contact Form */}
        <div>
          <ContactForm client:load locale={locale} />
        </div>

        {/* Right: Contact Channels */}
        <div class="space-y-8">
          <h2 class="text-2xl font-bold text-text">–î—Ä—É–≥–∏–µ —Å–ø–æ—Å–æ–±—ã —Å–≤—è–∑–∏</h2>

          <div class="space-y-6">
            {/* Email */}
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
              </div>
              <div>
                <p class="font-semibold text-text">Email</p>
                <div class="flex items-center gap-2">
                  <a href={`mailto:${t(locale, 'contact.channels.email')}`} class="text-primary hover:underline">
                    {t(locale, 'contact.channels.email')}
                  </a>
                  <button
                    onclick="navigator.clipboard.writeText('info@lako.services').then(()=>{const b=this;b.textContent='‚úì';setTimeout(()=>b.textContent='üìã',1500)})"
                    class="text-sm text-text-light hover:text-primary cursor-pointer"
                    title="–°–∫–æ–ø–∏—Ä–æ–≤–∞—Ç—å email"
                  >üìã</button>
                </div>
              </div>
            </div>

            {/* Telegram */}
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" /></svg>
              </div>
              <div>
                <p class="font-semibold text-text">Telegram</p>
                <a href="https://t.me/Bragin_Arbitr" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">{t(locale, 'contact.channels.telegramUsername')}</a>
                <p class="text-text-light text-sm">{t(locale, 'contact.channels.telegram')}</p>
              </div>
            </div>

            {/* Viber */}
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
              </div>
              <div>
                <p class="font-semibold text-text">Viber</p>
                <a href="viber://chat?number=%2B79969453103" class="text-primary hover:underline">{t(locale, 'contact.channels.viber')}</a>
              </div>
            </div>

            {/* Address */}
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
              </div>
              <div>
                <p class="font-semibold text-text">–ê–¥—Ä–µ—Å</p>
                <p class="text-text-light">{t(locale, 'contact.channels.address')}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
