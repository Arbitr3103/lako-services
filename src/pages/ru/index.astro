---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTA from '../../components/CTA.astro';
import SectionHeading from '../../components/SectionHeading.astro';
import { t, tObject, getLocalizedPath } from '../../i18n/utils';

const locale = 'ru';
const securityItems = tObject<string[]>(locale, 'home.security.items');
---
<BaseLayout
  title={t(locale, 'seo.home.title')}
  description={t(locale, 'seo.home.description')}
  locale={locale}
>
  {/* Hero */}
  <section class="relative overflow-hidden bg-gradient-to-br from-primary/5 via-bg to-accent/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-text">
          {t(locale, 'home.hero.title')}
        </h1>
        <p class="mt-6 text-lg md:text-xl text-text-light max-w-2xl mx-auto">
          {t(locale, 'home.hero.subtitle')}
        </p>
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
          <CTA href={getLocalizedPath('/contact', locale)} variant="accent" size="lg">
            {t(locale, 'home.hero.cta')}
          </CTA>
          <CTA href={getLocalizedPath('/logistics', locale)} variant="secondary" size="lg">
            {t(locale, 'home.hero.ctaSecondary')}
          </CTA>
        </div>
      </div>
    </div>
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-accent/10 rounded-full blur-3xl"></div>
    </div>
  </section>

  {/* Value Proposition */}
  <section class="py-20 bg-bg-alt">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading>{t(locale, 'home.value.title')}</SectionHeading>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-bg-card rounded-2xl p-8 border border-border hover:border-primary transition-colors">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{t(locale, 'home.value.fast.title')}</h3>
          <p class="text-text-light">{t(locale, 'home.value.fast.description')}</p>
        </div>
        <div class="bg-bg-card rounded-2xl p-8 border border-border hover:border-primary transition-colors">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{t(locale, 'home.value.local.title')}</h3>
          <p class="text-text-light">{t(locale, 'home.value.local.description')}</p>
        </div>
        <div class="bg-bg-card rounded-2xl p-8 border border-border hover:border-primary transition-colors">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">{t(locale, 'home.value.proven.title')}</h3>
          <p class="text-text-light">{t(locale, 'home.value.proven.description')}</p>
        </div>
      </div>
    </div>
  </section>

  {/* Target Segments */}
  <section class="py-20 bg-bg">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <SectionHeading>{t(locale, 'home.segments.title')}</SectionHeading>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <a href={getLocalizedPath('/logistics', locale)} class="group relative bg-bg-card rounded-2xl p-8 border-2 border-border-light hover:border-primary transition-all">
          <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-primary/20 transition-colors">
            <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" /></svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
            {t(locale, 'home.segments.logistics.title')}
          </h3>
          <p class="text-text-light">{t(locale, 'home.segments.logistics.description')}</p>
          <span class="mt-4 inline-flex items-center text-primary font-medium text-sm">
            {t(locale, 'logistics.hero.cta')}
            <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
          </span>
        </a>
        <a href={getLocalizedPath('/small-business', locale)} class="group relative bg-bg-card rounded-2xl p-8 border-2 border-border-light hover:border-primary transition-all">
          <div class="w-14 h-14 bg-accent/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-accent/20 transition-colors">
            <svg class="w-7 h-7 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
            {t(locale, 'home.segments.smallBusiness.title')}
          </h3>
          <p class="text-text-light">{t(locale, 'home.segments.smallBusiness.description')}</p>
          <span class="mt-4 inline-flex items-center text-primary font-medium text-sm">
            {t(locale, 'smallBusiness.hero.cta')}
            <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" /></svg>
          </span>
        </a>
      </div>
    </div>
  </section>

  {/* Data Protection */}
  <section class="py-20 bg-bg-alt reveal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="relative rounded-2xl border border-green-500/20 bg-gradient-to-br from-green-500/5 to-transparent p-8 md:p-12">
        <div class="flex flex-col md:flex-row gap-8 items-start">
          <div class="flex-shrink-0">
            <div class="w-16 h-16 bg-green-500/15 rounded-2xl flex items-center justify-center">
              <svg class="w-8 h-8 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
          </div>
          <div class="flex-1">
            <h2 class="text-2xl md:text-3xl font-bold text-text mb-2">
              {t(locale, 'home.security.title')}
            </h2>
            <p class="text-text-light mb-6">
              {t(locale, 'home.security.subtitle')}
            </p>
            <ul class="space-y-3 mb-8">
              {securityItems.map((item: string) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-text-light">{item}</span>
                </li>
              ))}
            </ul>
            <a
              href={getLocalizedPath('/zastita-podataka', locale)}
              class="inline-flex items-center text-green-400 hover:text-green-300 font-medium transition-colors"
            >
              {t(locale, 'home.security.cta')}
              <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  {/* Bottom CTA */}
  <section class="py-16 bg-gradient-to-r from-primary/20 to-accent/10 border-t border-border">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Готовы автоматизировать ваш бизнес?</h2>
      <p class="text-text-light mb-8 text-lg">Бесплатная консультация — без обязательств.</p>
      <CTA href={getLocalizedPath('/contact', locale)} variant="accent" size="lg">
        {t(locale, 'home.hero.cta')}
      </CTA>
    </div>
  </section>
</BaseLayout>
