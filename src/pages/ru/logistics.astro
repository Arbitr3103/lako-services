import SectionHeading from '../../components/SectionHeading.astro';
import { t, tObject, getLocalizedPath } from '../../i18n/utils';

const locale = 'ru';

const soloItems = tObject<Array<{icon: string, title: string, description: string}>>(locale, 'logistics.soloValue.items');
const steps = tObject<Array<{title: string, description: string, duration: string}>>(locale, 'logistics.howItWorks.steps');
const complianceItems = tObject<Array<{icon: string, title: string, problem: string, solution: string}>>(locale, 'logistics.compliance.items');
const comparisonHeaders = tObject<{feature: string, without: string, with: string}>(locale, 'logistics.comparison.headers');
const comparisonRows = tObject<Array<{feature: string, without: string, with: string}>>(locale, 'logistics.comparison.rows');
const companyItems = tObject<Array<{icon: string, title: string, description: string}>>(locale, 'logistics.company.items');
const faqItems = tObject<Array<{question: string, answer: string}>>(locale, 'logistics.faq.items');
const botFeatures = tObject<Array<{icon: string, slug: string, title: string, description: string}>>(locale, 'logistics.bot.features');
const botPricingPlans = tObject<Array<{name: string, price: string, period: string, features: string[], cta: string, popular?: boolean}>>(locale, 'logistics.bot.pricing.plans');
