---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import { getLocalizedPath, getPathWithoutLocale, ALL_LOCALES, type Locale } from '../i18n/utils';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  locale: Locale;
  noindex?: boolean;
  ogImage?: string;
  jsonLd?: Record<string, any>;
}

const { title, description, locale, noindex = false, ogImage, jsonLd } = Astro.props;
const currentPath = getPathWithoutLocale(Astro.url.pathname);
const canonicalUrl = new URL(getLocalizedPath(currentPath, locale), Astro.site);

const ogLocaleMap: Record<Locale, string> = { sr: 'sr_RS', en: 'en_US', ru: 'ru_RU' };
---
<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    {noindex && <meta name="robots" content="noindex, nofollow" />}

    {/* Canonical & hreflang */}
    <link rel="canonical" href={canonicalUrl.href} />
    {ALL_LOCALES.map(loc => (
      <link rel="alternate" hreflang={loc} href={new URL(getLocalizedPath(currentPath, loc), Astro.site).href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={new URL(getLocalizedPath(currentPath, 'sr'), Astro.site).href} />

    {/* Open Graph */}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:site_name" content="Lako Services" />
    <meta property="og:locale" content={ogLocaleMap[locale]} />
    <meta property="og:type" content="website" />
    {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.site).href} />}

    {/* Custom JSON-LD */}
    {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}

    {/* Favicon */}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    {/* Geist Font */}
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.3.1/dist/fonts/geist-sans/style.min.css" integrity="sha384-UoVLAkO5axeZ40F8A8xhhriZNUtKgmSG4Ue6MEi7Xv2KbKdwmOTcfhkeZuf09Rwh" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/geist@1.3.1/dist/fonts/geist-mono/style.min.css" integrity="sha384-HYhuLi8gbUIFB7qI7h6aaSkOCl4lKe5iE8iCH1sil2VkcHpWxdcf8d8FO2v+x4ZX" crossorigin="anonymous" />

    {/* Cloudflare Web Analytics â€” loaded only if user accepted analytics cookies */}
    <script>
      (function() {
        var consent = localStorage.getItem('cookie-consent');
        var analytics = localStorage.getItem('cookie-analytics');
        if (consent === 'accepted' || (consent === 'custom' && analytics === 'true')) {
          var s = document.createElement('script');
          s.defer = true;
          s.src = 'https://static.cloudflareinsights.com/beacon.min.js';
          s.setAttribute('data-cf-beacon', '{"token": "2332d731c66846b5b3d5471c5157bae1"}');
          document.head.appendChild(s);
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header locale={locale} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer locale={locale} />
    <CookieBanner locale={locale} />

    {/* Scroll reveal observer */}
    <script>
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      if (prefersReducedMotion) {
        document.querySelectorAll('.reveal').forEach(el => el.classList.add('visible'));
      } else {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0, rootMargin: '0px 0px 200px 0px' });
        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
      }
    </script>

    {/* LocalBusiness structured data */}
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Lako Services",
      "description": description,
      "url": "https://lako.services",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Novi Sad",
        "addressCountry": "RS"
      },
      "email": "info@lako.services",
      "areaServed": {
        "@type": "Country",
        "name": "Serbia"
      }
    })} />
  </body>
</html>
